<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundApp">@drawable/bg_light</item>
        <item name="textColorApp">@color/textColorAppLight</item>
        <item name="textColorSecond">@color/textColorSecondLight</item>
        <item name="bgCardColor">@color/bgCardColorLight</item>
        <item name="bgCardSelected">@color/bgCardSelectedLight</item>
        <item name="rainTextColor">@color/rainTextColorLight</item>
        <item name="backgroundSun">@drawable/bg_sun_light</item>
        <item name="bgMoon">@color/bgMoonLight</item>
        <item name="moonInsideColor">@color/moonInsideColorLight</item>
        <item name="imgRow">@drawable/ic_row_white</item>
        <item name="imgWind">@drawable/ic_wind_white</item>
        <item name="imgPressure">@drawable/ic_pressure</item>
        <item name="lineColor">@color/lineColorLight</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundApp">@drawable/bg_night</item>
        <item name="textColorApp">@color/textColorAppNight</item>
        <item name="textColorSecond">@color/textColorSecondNight</item>
        <item name="bgCardColor">@color/bgCardColorNight</item>
        <item name="bgCardSelected">@color/bgCardSelectedNight</item>
        <item name="rainTextColor">@color/rainTextColorNight</item>
        <item name="backgroundSun">@drawable/bg_sun_light</item>
        <item name="bgMoon">@color/bgMoonNight</item>
        <item name="moonInsideColor">@color/moonInsideColorNight</item>
        <item name="imgRow">@drawable/ic_row_white</item>
        <item name="imgWind">@drawable/ic_wind_white</item>
        <item name="imgPressure">@drawable/ic_pressure</item>
        <item name="lineColor">@color/lineColorNight</item>
    </style>

</resources>