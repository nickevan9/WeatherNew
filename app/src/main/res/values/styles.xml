<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundApp">@drawable/bg_light</item>
        <item name="backgroundColorApp">@color/backgroundColorAppLight</item>
        <item name="textColorApp">@color/textColorAppLight</item>
        <item name="textColorSecond">@color/textColorSecondLight</item>
        <item name="bgCardColor">@color/bgCardColorLight</item>
        <item name="bgCardSelected">@color/bgCardSelectedLight</item>
        <item name="textInCard">@color/textColorAppLight</item>
        <item name="rainTextColor">@color/rainTextColorLight</item>
        <item name="backgroundSun">@drawable/bg_sun_light</item>
<!--        <item name="bgMoon">@color/bgMoonLight</item>-->
        <item name="moonInsideColor">@color/moonInsideColorLight</item>
        <item name="textColorDay">@color/textColorDayLight</item>
        <item name="textColorMoonStatus">@color/textColorMoonStatusLight</item>
        <item name="bgWind">@color/bgWindDetailLight</item>
        <item name="tintColor">@color/tintColorLight</item>
        <item name="bgBottomBar">@color/bgColorBottomBarLight</item>
        <item name="colorBottomBarSelected">@color/colorBottomBarSelectedLight</item>
        <item name="colorBottomBarUnSelected">@color/colorBottomBarUnselectedLight</item>


        <item name="android:statusBarColor">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundApp">@drawable/bg_night</item>
        <item name="backgroundColorApp">@color/backgroundColorAppNight</item>
        <item name="textColorApp">@color/textColorAppNight</item>
        <item name="textColorSecond">@color/textColorSecondNight</item>
        <item name="bgCardColor">@color/bgCardColorNight</item>
        <item name="bgCardSelected">@color/bgCardSelectedNight</item>
        <item name="textInCard">@color/textColorAppNight</item>
        <item name="rainTextColor">@color/rainTextColorNight</item>
        <item name="backgroundSun">@drawable/bg_sun_light</item>
<!--        <item name="bgMoon">@color/bgMoonNight</item>-->
        <item name="moonInsideColor">@color/moonInsideColorNight</item>
        <item name="textColorDay">@color/textColorDayNight</item>
        <item name="textColorMoonStatus">@color/textColorMoonStatusNight</item>
        <item name="bgWind">@color/bgWindDetailNight</item>
        <item name="tintColor">@color/tintColorNight</item>
        <item name="bgBottomBar">@color/bgColorBottomBarNight</item>
        <item name="colorBottomBarSelected">@color/colorBottomBarSelectedNight</item>
        <item name="colorBottomBarUnSelected">@color/colorBottomBarUnselectedNight</item>

        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

</resources>